generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/*
  V1: hunts with linear locations, two puzzle types
*/

model Hunt {
  id                          String     @id
  title                       String
  neighborhood                String
  description                 String?    // Brief description of the hunt
  imageUrl                    String?    // Optional hunt image/icon URL
  huntIntroText               String?    // Intro text shown before first location
  huntSuccessText             String?    // Success text shown after completing all locations
  estimatedTimeMinutes        Int
  globalLocationRadiusMeters  Int?       @default(25) // Optional, defaults to 25 meters
  order                       Int        @default(999) // Display order (lower = first)
  createdAt                   DateTime   @default(now())
  updatedAt                   DateTime   @updatedAt
  locations                   Location[]
  playSessions                PlaySession[]
  logbookEntries              LogbookEntry[]
}

model Location {
  id                        String   @id
  hunt                      Hunt     @relation(fields: [huntId], references: [id])
  huntId                    String
  name                      String
  address                   String?  // Optional street address or location description
  order                     Int
  lat                       Float
  lng                       Float
  locationRiddle            String   // Clue to find THIS location
  locationFoundText         String   // Flavor text shown when player finds the location
  searchLocationButtonText  String?  // Optional custom button text (defaults to "üîç Search for Clues")
  puzzleType                String   // enum: 'number_code' | 'word_code' | etc. (enforced in app)
  puzzleConfig              Json?    // Optional puzzle configuration (e.g., colors for color_code)
  puzzleAnswer              String   // canonical stored answer (string, uppercase for word_code)
  puzzleAnswerLength        Int
  nextLocationId            String?  // nullable for final location
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  @@index([huntId, order])
}

model PlaySession {
  id                          String   @id @default(dbgenerated("gen_random_uuid()"))
  hunt                        Hunt     @relation(fields: [huntId], references: [id])
  huntId                      String
  clientId                    String   // local client identifier
  startedAt                   DateTime @default(now())
  completedAt                 DateTime?
  wrongLocationChecks         Int      @default(0)
  wrongPuzzleGuesses          Int      @default(0)
  lastIncorrectPuzzleAnswer   String?  // Track last incorrect answer to prevent duplicate counting
  totalTimeSeconds            Int?     // optional post-compute
  logbookEntries              LogbookEntry[]
}

model LogbookEntry {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  hunt      Hunt     @relation(fields: [huntId], references: [id])
  huntId    String
  session   PlaySession? @relation(fields: [sessionId], references: [id])
  sessionId String?
  name      String?
  message   String?
  photoUrl  String?  // Optional photo URL from Vercel Blob storage
  createdAt DateTime @default(now())
}

